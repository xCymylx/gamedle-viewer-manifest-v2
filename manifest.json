{
  "manifest_version": 2,
  "name": "Gamedle Zoom Viewer",
  "version": "1.0.2",
  "description": "Displays game images from Gamedle.wtf",
  
  "icons": {
    "16": "icons/icon.ico",
    "32": "icons/icon.ico", 
    "48": "icons/icon.ico",
    "128": "icons/icon.ico"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon.ico",
    "default_title": "View Game Image",
    "default_popup": "popup/popup.html"
  },
  
  "applications": {
    "gecko": {
      "id": "gamedle-viewer@kaden.rip",
      "strict_min_version": "57.0"
    }
  }
}