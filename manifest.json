{
    "manifest_version": 2,
    "name": "Gamedle Viewer",
    "version": "1.0",
    "description": "Displays final game images from Gamedle.wtf classic and artwork modes",
    "icons": {
      "16": "icons/icon.ico",
      "32": "icons/icon.ico",
      "48": "icons/icon.ico",
      "128": "icons/icon.ico"
    },
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/icon.ico",
        "default_title": "View Zoom Lens",
        "default_popup": "popup/popup.html"
      },
      "content_scripts": [
        {
          "matches": [
            "*://gamedle.wtf/classic*",
            "*://gamedle.wtf/artwork*",
            "*://www.gamedle.wtf/classic*",
            "*://www.gamedle.wtf/artwork*"
        ],
          "js": ["content.js"]
        }
      ],
      "applications": {
        "gecko": {
          "id": "gamedle-viewer@kaden.rip",
          "strict_min_version": "57.0"
        }
      }
    }